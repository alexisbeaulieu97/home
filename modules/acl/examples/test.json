{
    "version": "1.0",
    "rules": [
        {
            "id": "dry-run-test",
            "roots": [ "/tmp" ],
            "recurse": false,
            "include_self": true,
            "match": {
                "types": ["directory"],
                "pattern_syntax": "glob",
                "include": ["*"]
            },
            "entries": {
                "directories": [
                    { "kind": "mask", "perms": "r-x" }
                ]
            }
        }
    ]
}

